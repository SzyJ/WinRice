
// To view the default settings, hold "alt" while clicking on the "Settings" button.
// For documentation on these settings, see: https://aka.ms/terminal-documentation

{
    "$schema": "https://aka.ms/terminal-profiles-schema",

    "defaultProfile": "{00000000-0000-0000-ba54-000000000002}",
    "disabledProfileSources": [
        "Windows.Terminal.Azure"
    ],

    // Custom Globals
    "rowsToScroll": 10,
    "copyOnSelect": false,
    "wordDelimiters": " /\\()\"':,;<>~!@#$%^&*|+=[]{}~?â”‚",
    "confirmCloseAllTabs": false,

    "profiles":
    {
        "defaults":
        {
            // Settings for all profiles
            "useAcrylic" : true,
            "acrylicOpacity" : 0.9,
            "padding" : "15, 0, 15, 0",
            "scrollbarState": "visible",
            "startingDirectory": "."
        },
        "list":
        [
            {
                // git bash profile (default)
                "guid": "{00000000-0000-0000-ba54-000000000002}",
                "closeOnExit": true,
                "colorScheme": "Gruvbox_Dark",
                "commandline": "\"%PROGRAMFILES%\\git\\usr\\bin\\bash.exe\" -i -l",
                "cursorColor": "#ebdbb2",
                "cursorShape": "vintage",
                "fontFace": "Consolas",
                "fontSize": 12,
                "historySize": 9001,
                "icon": "C:\\configs\\terminal\\custom_icons\\git_bash_icon.png",
                "name": "Git_Bash",
                "snapOnInput": true
                //"experimental.retroTerminalEffect": true
            },
            {
                // powershell.exe profile
                "guid": "{61c54bbd-c2c6-5271-96e7-009a87ff44bf}",
                "name": "Windows PowerShell",
                "commandline": "powershell.exe",
                "hidden": false,
                "background": "#081833"
            },
            {
                // cmd.exe profile
                "guid": "{0caa0dad-35be-5f56-a8ff-afceeeaa6101}",
                "name": "cmd",
                "commandline": "cmd.exe",
                "hidden": false,
                "background": "#282828"
            }
        ]
    },

    // Add custom color schemes to this array
    "schemes": [
        {
            "name": "Gruvbox_Dark",
            "foreground": "#fbf1c7",
            "background": "#282828",
            "selectionBackground": "#7c6f64",
            "brightBlack": "#32302f",
            "brightBlue": "#83a598",
            "brightCyan": "#8ec07c",
            "brightGreen": "#b8bb26",
            "brightPurple": "#d3869b",
            "brightRed": "#fb4934",
            "brightWhite": "#fbf1c7",
            "brightYellow": "#fabd2f",
            "black": "#1d2021",
            "blue": "#458588",
            "cyan": "#689d6a",
            "green": "#98971a",
            "purple": "#b16286",
            "red": "#cc241d",
            "white": "#a89984",
            "yellow": "#d79921"
        },
        {
            "name": "Gruvbox_Light",
            "foreground": "#3c3836",
            "background": "#fbf1c7",
            "selectionBackground": "#d5c4a1",
            "brightBlack": "#7c6f64",
            "brightBlue": "#458588",
            "brightCyan": "#689d6a",
            "brightGreen": "#98971a",
            "brightPurple": "#b16286",
            "brightRed": "#cc241d",
            "brightWhite": "#f9f5d7",
            "brightYellow": "#d79921",
            "black": "#282828",
            "blue": "#076678",
            "cyan": "#427b58",
            "green": "#79740e",
            "purple": "#8f3f71",
            "red": "#9d0006",
            "white": "#f2e5bc",
            "yellow": "#b57614"
        }
    ],

    // Add any keybinding overrides to this array.
    // To unbind a default keybinding, set the command to "unbound"
    "keybindings": [
        // Basic
        {
            "command":
            {
                "action": "copy",
                "trimWhitespace": true
            },
            "keys": [
                "alt+w"
            ]
        },
        {
            "command": "paste",
            "keys": [
                "shift+insert"
            ]
        },
        {
            "command": "toggleFullscreen",
            "keys": [
                "f12"
            ]
        },
        {
            "command": "find",
            "keys": [
                "ctrl+f"
            ]
        },

        // Tab Management
        {
            "command": "newTab",
            "keys": [
                "ctrl+t"
            ]
        },
        {
            "command": "openNewTabDropdown",
            "keys": [
                "ctrl+shift+t"
            ]
        },
        {
            "command": "closeTab",
            "keys": [
                "ctrl+q"
            ]
        },
        {
            "command":
            {
                "action": "splitPane",
                "split": "auto"
            },
            "keys": [
                "alt+t"
            ]
        },
        {
            "command": "closePane",
            "keys": [
                "alt+q"
            ]
        }
    ]
}
